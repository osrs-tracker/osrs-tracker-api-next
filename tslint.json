{
  "rules": {
    "indent": [
      true,
      "spaces"
    ],
    "max-classes-per-file": false,
    "no-consecutive-blank-lines": true,
    "no-console": [
      true
    ],
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "no-return-await": true,
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter"
    ]
  }
}
